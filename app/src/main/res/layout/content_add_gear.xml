<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vaporware.rentout.AddGearActivity"
    tools:showIn="@layout/activity_add_gear">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editGearId"
        android:inputType="number"
        android:hint="Enter id"
        android:singleLine="true"
        android:layout_height="50dp" />
    <EditText
        android:layout_below="@id/editGearId"
        android:layout_width="match_parent"
        android:id="@+id/editGearType"
        android:singleLine="true"
        android:hint="Enter the gear type"
        android:layout_height="50dp" />
    <Button
        android:layout_below="@id/editGearType"
        android:text="Add Gear"
        android:id="@+id/buttonNewGearToDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
